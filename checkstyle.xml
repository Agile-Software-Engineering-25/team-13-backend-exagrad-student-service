<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Define the charset -->
    <property name="charset" value="UTF-8"/>

    <!-- ===== SUPPRESSIONS FOR TEST FILES ===== -->
    
    <!-- Suppress magic numbers in test files -->
    <module name="SuppressionSingleFilter">
        <property name="checks" value="MagicNumber"/>
        <property name="files" value=".*[/\\]test[/\\].*\.java$"/>
    </module>

    <!-- Suppress method length checks in test files -->
    <module name="SuppressionSingleFilter">
        <property name="checks" value="MethodLength"/>
        <property name="files" value=".*[/\\]test[/\\].*\.java$"/>
    </module>

    <!-- Suppress Javadoc checks in test files -->
    <module name="SuppressionSingleFilter">
        <property name="checks" value="MissingJavadoc.*"/>
        <property name="files" value=".*[/\\]test[/\\].*\.java$"/>
    </module>

    <!-- === TreeWalker module processes Java source code === -->
    <module name="TreeWalker">

        <!-- ===== NAMING CONVENTIONS ===== -->

        <!-- Classes and Interfaces: PascalCase -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Methods: camelCase, verb phrases -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Variables: camelCase, descriptive -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Constants: ALL_CAPS with underscores -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9_]*$"/>
        </module>

        <!-- Package names: lowercase -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
        </module>

        <!-- ===== CODE COMPLEXITY (WARNINGS ONLY) ===== -->

        <!-- Cyclomatic Complexity: Max 10 per method -->
        <module name="CyclomaticComplexity">
            <property name="max" value="10"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Method Length: Max 50 lines -->
        <module name="MethodLength">
            <property name="max" value="50"/>
            <property name="countEmpty" value="false"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Parameter Count: Max 7 parameters -->
        <module name="ParameterNumber">
            <property name="max" value="7"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- ===== DESIGN & BEST PRACTICES ===== -->

        <!-- Require braces on all control statements -->
        <module name="NeedBraces">
            <property name="tokens" value="LITERAL_IF, LITERAL_ELSE, LITERAL_FOR, LITERAL_WHILE, LITERAL_DO"/>
        </module>

        <!-- Switch statements must have break or fall-through comment -->
        <module name="FallThrough"/>

        <!-- One statement per line -->
        <module name="OneStatementPerLine"/>

        <!-- Unused imports -->
        <module name="UnusedImports"/>

        <!-- Unused local variables -->
        <module name="UnusedLocalVariable">
            <property name="allowUnnamedVariables" value="false"/>
        </module>

        <!-- Magic Numbers (except common ones) - WARNING ONLY -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1,0,1,2"/>
            <property name="ignoreHashCodeMethod" value="true"/>
            <property name="ignoreAnnotation" value="true"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Avoid empty blocks - WARNING ONLY -->
        <module name="EmptyBlock">
            <property name="option" value="text"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Avoid nested blocks - WARNING ONLY -->
        <module name="AvoidNestedBlocks">
            <property name="severity" value="warning"/>
        </module>

        <!-- ===== JAVADOC (WARNINGS ONLY) ===== -->

        <!-- Public classes should have Javadoc -->
        <module name="MissingJavadocType">
            <property name="scope" value="public"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Public methods should have Javadoc -->
        <module name="MissingJavadocMethod">
            <property name="scope" value="public"/>
            <property name="severity" value="warning"/>
            <property name="allowMissingPropertyJavadoc" value="true"/>
        </module>

    </module>

</module>
